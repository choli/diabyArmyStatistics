#extend("base"):
    #export("body"):
    <h1>diabyArmy Tippspiel Stats</h1>

    <div class="stats">
        <div class="stat">
            <h2>Optimistischste Fans</h2>
            <p class="subtitle">Wer tippt die Spiele des<br/>Bayers am optimistischsten?</p>
            <table>
                <tr>
                    <th></th>
                    <th>S</th>
                    <th>U</th>
                    <th>N</th>
                    <th>Torverh.</th>
                    <th>Diff.</th>
                </tr>
                #for(user in opt):
                <tr>
                    <td>#(user.name)</td>
                    <td style="text-align:right">#(user.siege)</td>
                    <td style="text-align:right">#(user.unentschieden)</td>
                    <td style="text-align:right">#(user.niederlagen)</td>
                    <td style="text-align:center">#(user.tipp.goalsFor):#(user.tipp.goalsAgainst)</td>
                    <td style="text-align:right">#(user.tipp.goalsFor - user.tipp.goalsAgainst)</td>
                </tr>
                #endfor
            </table>
        </div>

        <div class="stat">
            <h2>Pessimistischste Fans</h2>
            <p class="subtitle">Wer hält nichts auf den Bayer?</p>
            <table>
                <tr>
                    <th></th>
                    <th>S</th>
                    <th>U</th>
                    <th>N</th>
                    <th>Torverh.</th>
                    <th>Diff.</th>
                </tr>
                #for(user in pess):
                <tr>
                    <td>#(user.name)</td>
                    <td style="text-align:right">#(user.siege)</td>
                    <td style="text-align:right">#(user.unentschieden)</td>
                    <td style="text-align:right">#(user.niederlagen)</td>
                    <td style="text-align:center">#(user.tipp.goalsFor):#(user.tipp.goalsAgainst)</td>
                    <td style="text-align:right">#(user.tipp.goalsFor - user.tipp.goalsAgainst)</td>
                </tr>
                #endfor
            </table>
        </div>

        <div class="stat">
            <h2>K*ln Fans?</h2>
            <p class="subtitle">Wer glaubt denn so fest an<br/>diese eine andere Mannschaft?</p>
            <table>
                <tr>
                    <th></th>
                    <th>S</th>
                    <th>U</th>
                    <th>N</th>
                    <th>Torverh.</th>
                    <th>Diff.</th>
                </tr>
                #for(user in col):
                <tr>
                    <td>#(user.name)</td>
                    <td style="text-align:right">#(user.siege)</td>
                    <td style="text-align:right">#(user.unentschieden)</td>
                    <td style="text-align:right">#(user.niederlagen)</td>
                    <td style="text-align:center">#(user.tipp.goalsFor):#(user.tipp.goalsAgainst)</td>
                    <td style="text-align:right">#(user.tipp.goalsFor - user.tipp.goalsAgainst)</td>
                </tr>
                #endfor
            </table>
        </div>

        <div class="stat">
            <h2>Heimstärke</h2>
            <p class="subtitle">Wer tippt nur auf<br/>die Heimmannschaften?</p>
            <table>
                #for(user in home):
                <tr>
                    <td>#(user.name)</td>
                    <td style="text-align:right">#(user.heimsiege)</td>
                    <td>Heimsiege</td>
                </tr>
                #endfor
            </table>
        </div>

        <div class="stat">
            <h2>Eher unentschieden</h2>
            <p class="subtitle">Wer glaubt noch an die<br/>Ausgeglichenheit der Liga?</p>
            <table>
                #for(user in draw):
                <tr>
                    <td>#(user.name)</td>
                    <td style="text-align:right">#(user.unentschieden)</td>
                    <td>Unentschieden</td>
                </tr>
                #endfor
            </table>
        </div>

        <div class="stat">
            <h2>Auswärtsfans!</h2>
            <p class="subtitle">Wer denkt, dass es auswärts in<br/>halbvollen Stadien besser geht?</p>
            <table>
                #for(user in away):

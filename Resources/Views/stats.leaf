            <table>
                <tr>
                    <th></th>
                    <th>Total</th>
                    <th>2-1</th>
                    <th>1-2</th>
                </tr>
                #for(user in twoOne):
                <tr>
                    <td>#(user.name)</td>
                    <td style="text-align:right">#(user.heimsiege + user.gastsiege)</td>
